<div class="sm:flex sm:flex-row mx-auto">
  <div class="basis-1/2 mx-auto  m-3 p-16 rounded shadow shadow-cyan-500/50">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <h2 class="text-center text-xl text-cyan-500
      bg-cyan-200 p-3 font-semibold mb-5 rounded">Edit <%= resource_name.to_s.humanize %></h2>
    
      <div class="space-y-3 w-full max-w">

        <div class="field space-y-2">
          <%= f.label :username, class: "text-cyan-700 font-bold" %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username",
          class: "text-field" %>
        </div>

        <div class="field space-y-2">
          <%= f.label :email, class: "text-cyan-700 font-bold" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "email-field" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field space-y-2">
          <%= f.label :password, class: "text-cyan-700 font-bold" %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "password-field" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field space-y-2">
          <%= f.label :password_confirmation, class: "text-cyan-700 font-bold" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password-field" %>
        </div>

        <div class="field space-y-2">
          <%= f.label :current_password, class: "text-cyan-700 font-bold" %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "password-field" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "submit-field" %>
        </div>
      </div>    
    <% end %>
  </div>

  <div class="basis-1/4 mx-auto shadow shadow-red-300 p-5 m-5 rounded">
          <h3 class="text-center text-xl text-red-500
            p-2 font-semibold mb-3 rounded">Cancel my account</h3> <hr/ >  
      
          <div class="text-red-700 font-bold mt-3 text-center">Unhappy? <%= button_to "Cancel my account",
          registration_path(resource_name), 
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
            method: :delete, class: "text-white text-xl bg-red-400 
                  p-1 w-64 rounded cursor-pointer font-bold
                  hover:text-red-50 hover:bg-red-500" %>
          </div>
          <div class="mt-3 text-center">
            <%= link_to "Back", :back, class: "text-white text-xl bg-slate-400 
                    p-2 w-full rounded cursor-pointer font-bold
                    hover:text-slate-50 hover:bg-slate-500 " %>
          </div>
  </div>
</div>   